- content_for(:title) { 'Artifacts' }

%table
  %tr
    %th Name
    %th Description
    %th
    %th
    %th

  - @artifacts.each do |artifact|
    %tr
      %td= artifact.name
      %td= artifact.description
      %td= link_to 'Show', artifact
      %td= link_to 'Edit', edit_artifact_path(artifact)
      %td= link_to 'Destroy', artifact, :method => :delete, :data => { :confirm => 'Are you sure?' }

.form-actions
  = link_to 'New Artifact', new_artifact_path, class: 'btn btn-primary'